import /vendor/etc/init/hw/init.kingfisher.usb.rc

on early-init
    mount debugfs debugfs /sys/kernel/debug

    insmod /vendor/lib/modules/radio-i2c-si4689.ko

on init
    start vendor.vehicle-hal-2.0
    setrlimit memlock 8519680 8519680

on property:ro.boot.wd_start=1
    start watchdogd

on late-init
    mkdir /mnt/tee 0700 root root
    start tee_supplicant

on fs
    mount_all /vendor/etc/fstab.kingfisher --early

on late-fs
    mount_all /vendor/etc/fstab.kingfisher --late

on post-fs-data
    mkdir /data/vendor/wifi 0770 wifi wifi
    mkdir /data/vendor/wifi/wpa_supplicant 0770 wifi wifi
    mkdir /data/vendor/wifi/wpa 0770 wifi wifi
    mkdir /data/vendor/wifi/wpa/sockets 0770 wifi wifi

    # Set indication (checked by vold) that we have finished this action
    setprop vold.post_fs_data_done 1

on early-boot
    setprop wifi.interface wlan0
    setprop wifi.direct.interface p2p-dev-wlan0
    verity_update_state

    insmod /vendor/lib/modules/vspm.ko

    # Setup CAN interface
    exec -- /system/bin/ip link set can0 up type can bitrate 125000
    exec -- /system/bin/ip link set can1 up type can bitrate 125000

on boot
    write /sys/power/wake_lock ws10_suspend_wa

    insmod /vendor/lib/modules/qos.ko
    insmod /vendor/lib/modules/vspm_if.ko
    insmod /vendor/lib/modules/mmngr.ko
    insmod /vendor/lib/modules/mmngrbuf.ko
    insmod /vendor/lib/modules/uvcs_drv.ko
    insmod /vendor/lib/modules/wlcore.ko
    insmod /vendor/lib/modules/wlcore_sdio.ko
    insmod /vendor/lib/modules/wl18xx.ko
    insmod /vendor/lib/modules/micrel.ko
    insmod /vendor/lib/modules/xtensa-hifi.ko
    insmod /vendor/lib/modules/st_drv.ko
    insmod /vendor/lib/modules/btwilink.ko

on property:ro.boot.bootreason=watchdog
    chmod 777 /sys/fs/pstore
    mkdir /data/vendor/ramoops_logger 777 system log
    start ramoops_logger

service vendor.pvrsrvctl /vendor/bin/pvrsrvctl --start
    class hal
    critical
    user root
    group root
    oneshot
    seclabel u:r:pvrsrvctl:s0

service vendor.uim /vendor/bin/uim
    class main
    user bluetooth
    group bluetooth net_bt_admin system
    oneshot

service wpa_supplicant /vendor/bin/hw/wpa_supplicant \
        -iwlan0 -Dnl80211 \
        -c/vendor/etc/wifi/wpa_supplicant.conf \
        -O/data/vendor/wifi/wpa/sockets \
        -e/data/vendor/wifi/entropy.bin -g@android:wpa_wlan0
    socket wpa_wlan0 dgram 660 wifi wifi
    class main
    disabled
    oneshot

service tee_supplicant /vendor/bin/tee-supp
    critical
    user root
    group root
    seclabel u:r:tee:s0

# bugreport is triggered by holding down volume down, volume up and power
service bugreport /system/bin/dumpstate -d -p -B -z \
        -o /data/user_de/0/com.android.shell/files/bugreports/bugreport
    class main
    disabled
    oneshot
    keycodes 114 115 116

# Set watchdog timer to 30 seconds and pet it every 10 seconds to get a 20 second margin
service watchdogd /sbin/watchdogd 10 20
    oneshot
    seclabel u:r:watchdogd:s0

service ramoops_logger /vendor/bin/ramoops_logger
    user system
    group log
    oneshot
    seclabel u:r:ramoops_logger:s0